#!/bin/bash

# Определение переменной с путем к файлу для записи вывода
LOG_FILE="/logs/df.txt"

# Бесконечный цикл для выполнения команды каждые три минуты
while true; do
    # Запись текущей временной метки в файл (дополнительный контекст)
    date >> "$LOG_FILE"

    # Выполнение команды df -h и запись вывода в файл
    df -h >> "$LOG_FILE"

    # Вывод сообщения в консоль о выполнении
    echo "Command 'df -h' executed and logged to $LOG_FILE"

    # Пауза на три минуты перед следующим выполнением
    sleep 180
done
+++
